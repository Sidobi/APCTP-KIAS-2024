&control
    calculation = 'relax'
    restart_mode='from_scratch',
    prefix='Si',
    pseudo_dir ='../pseudo',
    outdir='./wavefunc'
    verbosity = 'high'
    forc_conv_thr = 1.0d-7
    tprnfor = .true.
    tstress = .true.
    dt=30
    nstep = 20000
!   disk_io ='none'
 /
 &system
    ibrav= 0,
    nat= 2, ntyp= 1,
!   nbnd =40
    ecutwfc = 80.0, ecutrho = 640.0,
    occupations = 'smearing',
    degauss = 0.0019
    smearing = 'gaussian'
!  nosym = .true.
 /
 &electrons
    mixing_mode = 'plain'
    electron_maxstep = 50
    scf_must_converge = .false.
   conv_thr = 1.0d-14
 /
 &ions
  ion_dynamics = 'damp'
 /
 &cell
  cell_dynamics = 'damp-w'
  press_conv_thr = 0.1
 /
